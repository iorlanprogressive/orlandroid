<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/nav_graph"
	app:startDestination="@id/topFragment">

	<fragment
		android:id="@+id/topFragment"
		android:name="ru.orlanprogressive.orlandroid.ui.top.TopFragment"
		android:label="TopFragment">

		<argument
			android:name="category"
			app:argType="string"
			app:nullable="true"
			android:defaultValue=""/>

		<action
			android:id="@+id/action_topFragment_to_appDetailsFragment"
			app:destination="@id/appDetailsFragment"
			app:launchSingleTop="true" />

	</fragment>

	<fragment
		android:id="@+id/categoriesFragment"
		android:name="ru.orlanprogressive.orlandroid.ui.categories.CategoriesFragment"
		android:label="CategoriesFragment">

		<action
			android:id="@+id/action_categoriesFragment_to_topFragment"
			app:destination="@id/topFragment"
			app:launchSingleTop="true" />

	</fragment>

	<fragment
		android:id="@+id/appDetailsFragment"
		android:name="ru.orlanprogressive.orlandroid.ui.details.AppDetailsFragment"
		android:label="AppDetailsFragment">

		<argument
			android:name="packageName"
			app:argType="string"
			app:nullable="false" />

		<action
			android:id="@+id/action_appDetailsFragment_to_developerFragment"
			app:destination="@id/developerFragment"
			app:launchSingleTop="true" />

		<deepLink
			android:id="@+id/deepLink"
			android:autoVerify="true"
			app:uri="https://orlan-progressive.ru/app/{packageName}" />

	</fragment>


	<fragment
		android:id="@+id/developerFragment"
		android:name="ru.orlanprogressive.orlandroid.ui.developer.DeveloperFragment"
		android:label="DeveloperFragment">

		<argument
			android:name="developer"
			app:argType="string"
			app:nullable="false" />

		<action
			android:id="@+id/action_developerFragment_to_appDetailsFragment"
			app:destination="@id/appDetailsFragment"
			app:launchSingleTop="true" />

	</fragment>

	<fragment
		android:id="@+id/myAppsFragment"
		android:name="ru.orlanprogressive.orlandroid.ui.myapps.MyAppsFragment"
		android:label="MyAppsFragment" >

		<action
			android:id="@+id/action_myAppsFragment_to_loginFragment"
			app:destination="@id/loginFragment"
			app:launchSingleTop="true" />

		<action
			android:id="@+id/action_myAppsFragment_to_appDetailsFragment"
			app:destination="@id/appDetailsFragment"
			app:launchSingleTop="true" />

	</fragment>

	<fragment
		android:id="@+id/accountFragment"
		android:name="ru.orlanprogressive.orlandroid.ui.account.AccountFragment"
		android:label="AccountFragment" >

		<action
			android:id="@+id/action_accountFragment_to_loginFragment"
			app:destination="@id/loginFragment"
			app:launchSingleTop="true" />

		<action
			android:id="@+id/action_accountFragment_to_docFragment"
			app:destination="@id/docFragment"
			app:launchSingleTop="true" />

	</fragment>

	<fragment
		android:id="@+id/loginFragment"
		android:name="ru.orlanprogressive.orlandroid.ui.account.LoginFragment"
		android:label="LoginFragment" >

		<action
			android:id="@+id/action_loginFragment_to_registerFragment"
			app:destination="@id/registerFragment"
			app:launchSingleTop="true" />

		<action
			android:id="@+id/action_loginFragment_to_docFragment"
			app:destination="@id/docFragment"
			app:launchSingleTop="true" />

	</fragment>

	<fragment
		android:id="@+id/registerFragment"
		android:name="ru.orlanprogressive.orlandroid.ui.account.RegisterFragment"
		android:label="RegisterFragment" />

	<fragment
		android:id="@+id/docFragment"
		android:name="ru.orlanprogressive.orlandroid.ui.doc.DocFragment"
		android:label="DocFragment">

		<argument
			android:name="link"
			app:argType="string"
			app:nullable="true"
			android:defaultValue="" />

		<action
			android:id="@+id/action_docFragment_self"
			app:destination="@id/docFragment"
			app:launchSingleTop="true" />

	</fragment>

</navigation>
